<div class="container my-5">
  <h1 class="text-center text-secondary mb-4">Resources</h1>

  <form action="/resources/add" method="POST" class="row g-3 mb-4">
    <div class="col-md-5">
      <input type="text" name="title" class="form-control" placeholder="Resource Title" required>
    </div>
    <div class="col-md-5">
      <input type="text" name="link" class="form-control" placeholder="PDF Link" required>
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-success w-100">Add</button>
    </div>
  </form>

  <ul class="list-group">
    {{#each resources}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <a href="{{this.link}}" target="_blank">{{this.title}}</a>
      <form action="/resources/delete" method="POST" class="mb-0">
        <input type="hidden" name="title" value="{{this.title}}">
        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
      </form>
    </li>
    {{/each}}
  </ul>
</div>
