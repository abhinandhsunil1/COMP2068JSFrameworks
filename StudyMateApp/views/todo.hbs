<div class="container my-5">
  <h1 class="text-center text-secondary mb-4">My To-Do List</h1>
  
  <form action="/todo/add" method="POST" class="mb-4 d-flex">
    <input type="text" name="task" class="form-control me-2" placeholder="New task" required>
    <button type="submit" class="btn btn-success">Add</button>
  </form>

  <ul class="list-group">
    {{#each todos}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      {{this}}
      <form action="/todo/delete" method="POST" class="mb-0">
        <input type="hidden" name="task" value="{{this}}">
        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
      </form>
    </li>
    {{/each}}
  </ul>
</div>
